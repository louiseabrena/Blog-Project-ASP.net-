
@{
    ViewBag.Title = "New";
}

<h2>Add New Teacher</h2>
<nav>
    <a class="navlink" href="/Teacher/List">Back to Teacher's List</a>
</nav>
<form method="POST" action="/Teacher/Create">
    <div>
        <label for="TeacherId">Teacher ID:</label>
        <input type="text" id="TeacherId" name="TeacherId" />
    </div>
    <div>
        <label for="TeacherFname">Teacher First Name:</label>
        <input type="text" id="TeacherFname" name="TeacherFname" />
    </div>
    <div>
        <label for="TeacherLname">Teacher Last Name:</label>
        <input type="text" id="TeacherLname" name="TeacherLname" />
    </div>
    <div>
        <label for="EmployeeNumber">Employee Number:</label>
        <input type="text" id="EmployeeNumber" name="EmployeeNumber" />
    </div>
    <div>
        <label for="HireDate">Hire Date:</label>
        <input type="text" id="HireDate" name="HireDate" />
    </div>
    <div>
        <label for="Salary">Salary:</label>
        <input type="text" id="Salary" name="Salary" />
    </div>
    <div>
        <input type="submit" id="CreateTeacher" value="Create teacher" />
    </div>
</form>
